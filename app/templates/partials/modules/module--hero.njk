<div class="hero card card--text-overlay content--{{width}} content--{{position}}">
    <div class="card--item card--item-1">
        <div class="card--content">
            <div class="card--title">{{ editable_BCC_hero_heading }}</div>
            <p class="card--snippet">{{ editable_BCC_hero_content }}</p>
            <a class="card--button" href="{{ editable_BCC_hero_link }}">{{ editable_BCC_hero_button }}</a>
        </div>
    </div>
    <div class="hero--image card--item card--item-2">
        <picture>
            <source media="(max-width: 799px)" srcset="https://picsum.photos/800/800">
            <source media="(min-width: 800px)" srcset="https://picsum.photos/1200/400">
            <source media="(min-width: 1200px)" srcset="https://picsum.photos/1600/400">
            <img src="https://picsum.photos/1600/400" alt="the default image">
        </picture>
    </div>
</div>