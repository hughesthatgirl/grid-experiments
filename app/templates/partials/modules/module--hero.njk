<div class="hero card card--text-overlay content--{{content_width}} content--{{content_position}}">
    <div class="card--item card--item-1">
        <div class="card--content">
            <div class="card--title">{{ editable_BCC_hero_heading }}</div>
            <p class="card--snippet">{{ editable_BCC_hero_content }}</p>
            <a class="card--button" href="{{ editable_BCC_hero_link }}">{{ editable_BCC_hero_button }}</a>
        </div>
    </div>
    <div class="hero--image card--item card--item-2">
        <picture>
            <source media="(max-width: 768px)" srcset="{{ editable_BCC_hero_img_small }}">
            <source media="(max-width: 1024px)" srcset="{{ editable_BCC_hero_img_medium }}">
            <source media="(min-width: 1600px)" srcset="{{ editable_BCC_hero_img_large_default }}">
            <img src="{{ editable_BCC_hero_img_large_default }}" alt="{{ editable_BCC_hero_alt }}">
        </picture>
    </div>
</div>