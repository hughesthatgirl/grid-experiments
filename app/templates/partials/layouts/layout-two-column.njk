{% extends "partials/layouts/layout-container.njk" %}
{% block content %}
    <div class="layout-row max-width-{{ row_width }}">
        <h2>{{ heading }}</h2>
        <p>{{ content }}</p>
        <div class="column-grid column-grid-md--2-col">
            {% for item in items %}
                <div class="column-grid--item">{% block item %}{% endblock %}</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}